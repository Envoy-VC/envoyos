{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./src/*"]
    },
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "api"],
  "extends": "@envoyos/config/tsconfig/library/base",
  "include": ["**/*.ts", "**/*.tsx"]
}
